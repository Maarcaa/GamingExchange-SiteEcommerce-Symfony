{% extends 'base.html.twig' %}

{% block title %}Mon espace perso{% endblock %}

{% block body %}

    <h1 class="text-center my-4">Mon espace personnel</h1>

    <div class="row">
        <div class="col-8 mx-auto">
            {% include 'include/_flashes.html.twig' %}
        </div>
    </div>

    <div class="row">
        <div class="col-10 mx-auto">

            <div class="card text-center">
                <div class="card-header">
                  <p> Pseudo : {{ app.user.pseudo }} </p>
                   <p> Prénom : {{ app.user.prenom }} </p> 
                   <p> Nom : {{ app.user.nom | capitalize }} </p>
                </div>
                <div class="card-body">
                    <p class="card-text">Sexe : {{ app.user.sexe }}</p>
                    <p class="card-text">Adresse : {{ app.user.adresse }}</p>
                    <p class="card-text">Code Postal : {{ app.user.codepostal }}</p>
                    <p class="card-text">Ville : {{ app.user.ville }}</p>
                    <p class="card-text">Téléphone : {{ app.user.telephone }}</p>
                    <a href="{{ path('change_password') }}" class="btn btn-warning">Changer mon mot de passe</a>
                </div>
                <div class="card-footer text-muted">
                    Compte crée le : {{ app.user.createdAt | date('d/m/Y') }} | Modifié : {{ app.user.updatedAt | date('d/m/Y') }}
                </div>
            </div>

        </div>
    </div>

{% endblock %}