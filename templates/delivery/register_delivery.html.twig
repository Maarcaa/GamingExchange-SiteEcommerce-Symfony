{% extends 'base.html.twig' %}

{% block title %}Coordonnées de livraison
{% endblock %}

{% block body %}

	<div class="row">
		<div class="col-8 mx-auto">
			{% include 'include/_flashes.html.twig' %}
		</div>
	</div>

	<h1 class="my-4 text-center">Coordonnées de livraison</h1>

	<div class="row">
		<div class="col-6 mx-auto">
			{{ form_start(form) }}

			<div class="row mx-auto">
				<div class="col-6">{{ form_row(form.nom) }}</div>
				<div class="col-6">{{ form_row(form.prenom) }}</div>
			</div>
			<div class="row">
				<div class="col-8">{{ form_row(form.adresse) }}</div>
			</div>
			<div class="row">
				<div class="col-8">{{ form_row(form.code_postal) }}</div>
			</div>
            <div class="row">
				<div class="col-8">{{ form_row(form.ville) }}</div>
			</div>
            <div class="row">
				<div class="col-8">{{ form_row(form.Pays) }}</div>
			</div>
            <div class="row">
				<div class="col-8">{{ form_row(form.telephone) }}</div>
			</div>
            <div class="row">
				<div class="col-8">{{ form_row(form.email) }}</div>
			</div>

			{{ form_end(form) }}
		</div>
	</div>

{% endblock %}
